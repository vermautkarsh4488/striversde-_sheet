solution 1-->
#include <bits/stdc++.h> 
void sort012(int *nums, int n)
{
   //   Write your code here

 int low = 0 , i = 0 , high = n- 1;
            
            while(high>=i)
            {
                  if(nums[i] == 1)
                  {
                           i++;
                          
                  }
                   
           else if(nums[i] == 0)
           {
                    swap(nums[i] , nums[low]);
                    i++, low++;
                   
           }
                   
           else if(nums[i] == 2)
           {
                swap(nums[i],nums[high]);
                    high--;
                        
           }
                    
            
            
                  else
                        i++;
            }
                    
           

}

